{
  "providers": {
    "openai": {
      "base_url": "https://api.openai.com/v1",
      "api_key_env": "OPENAI_API_KEY",
      "model": "gpt-4.1-mini"
    },
    "openrouter": {
      "base_url": "https://openrouter.ai/api/v1",
      "api_key_env": "OPENROUTER_API_KEY",
      "model": "openai/gpt-4o-mini"
    }
  },
  "roles": [
    {
      "name": "analyst",
      "prompt_file": "roles/analyst.md",
      "provider": "openai"
    },
    {
      "name": "skeptic",
      "prompt_file": "roles/skeptic.md",
      "provider": "openrouter"
    },
    {
      "name": "builder",
      "prompt_file": "roles/builder.md",
      "provider": "openai"
    }
  ],
  "synthesizer": {
    "name": "synthesizer",
    "prompt_file": "roles/synthesizer.md",
    "provider": "openai"
  },
  "runtime": {
    "temperature": 0.2,
    "max_tokens": 1200,
    "timeout_sec": 90,
    "parallel_workers": 8
  }
}
